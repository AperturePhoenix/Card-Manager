    <items>
        <VBox>
            <children>
                <HBox>
                    <children>
                        <TextField fx:id="searchTextField" promptText="Search" />
                    </children>
                </HBox>
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
                    <content>
                        <ListView fx:id="cardListView" />
                    </content>
                </ScrollPane>
                <HBox alignment="TOP_RIGHT">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" text="+" />
                        <Button fx:id="removeButton" mnemonicParsing="false" prefWidth="25.0" text="-" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                      <Label fx:id="cardCompanyLabel" alignment="CENTER" contentDisplay="CENTER" text="Card Label">
                          <font>
                              <Font size="20.0" />
                          </font>
                      </Label>
                  <Label fx:id="cardTypeLabel" text="Card Type">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
                <TextField fx:id="cardNumberTextField" alignment="CENTER" maxWidth="-Infinity" prefWidth="200.0" promptText="Card Number" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.rowIndex="2">
               <children>
                  <HBox fx:id="cardHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="CVVTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="100.0" promptText="CVV" />
                        <Separator prefWidth="15.0" visible="false" />
                        <TextField fx:id="expirationTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="100.0" promptText="Expiration" />
                     </children>
                  </HBox>
                  <TextField fx:id="amountTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="200.0" promptText="Amount" visible="false" />
               </children>
            </StackPane>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="saveButton" disable="true" mnemonicParsing="false" prefWidth="52.0" text="Save">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </Button>
                        <Separator prefWidth="15.0" visible="false" HBox.hgrow="NEVER" />
                        <Button fx:id="cancelButton" disable="true" mnemonicParsing="false" text="Cancel" />
                    </children>
                    <GridPane.margin>
                        <Insets />
                    </GridPane.margin>
                </HBox>
            </children>
        </GridPane>
    </items>
</fx:root>
